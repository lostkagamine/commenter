@page
@model IndexModel
@{
    ViewData["Title"] = "Comments";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

There are <strong>@Model.Comments.Count</strong> comments.<br>
@if (Model.Comments != null)
{
    foreach (var comment in Model.Comments)
    {
        // I don't know if this is the best way to do this
        // It probably isn't
        // I don't know how to use ASP.NET, okay
        @Html.Raw($"<strong>{comment.Author}</strong>: {comment.Text}<br>");
    }
}
